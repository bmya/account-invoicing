<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_local_currency_form" model="ir.ui.view">
        <field name="name">Local Currency Form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']/group/group[@name='acc_sale']/field[@name='property_payment_term_id']" position="after">
                <field name="invoice_currency"/>
            </xpath>
        </field>
    </record>
</odoo>
